@import '../lib/mixins'

html, body
  margin 0
  width 100%
  height 100%

#bg
  width 100%
  height 100%
  background url(sky-in-glass.jpg) no-repeat center center
  background-size cover

  overflow hidden

  #grid-layer
    position absolute
    top 0
    bottom -50%
    left 0
    right -50%
    overflow hidden
    .grid
      float left
      background-color #fff
      opacity 0
      // border-radius 15px
      transition opacity 2s
      &:hover
        opacity .5
        transition opacity .25s
